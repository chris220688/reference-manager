{
  "index_patterns": [
    "referencemanager*"
  ],
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1"
    },
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "whitespace",
          "filter": [
            "english_stop",
            "greek_stop"
          ]
        }
      },
      "filter": {
        "english_stop": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": "_english_"
        },
        "greek_stop": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": "_greek_"
        }
      }
    }
  }
}