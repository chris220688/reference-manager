{
  "index_patterns": [
    "referencemanager*"
  ],
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1"
    },
    "analysis": {
      "analyzer": {
        "custom": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "english_stop",
            "greek_stop",
            "english_stemmer",
            "greek_stemmer"
          ]
        }
      },
      "filter": {
        "english_stop": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": "_english_"
        },
        "english_stemmer":{
          "type":"stemmer",
          "language":"english"
        },
        "greek_stop": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": "_greek_"
        },
        "greek_stemmer": {
          "type": "stemmer",
          "language": "greek"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "fields": {
          "english": {
            "type": "text",
            "analyzer": "english"
          },
          "greek": {
            "type": "text",
            "analyzer": "greek"
          }
        }
      }
    }
  }
}